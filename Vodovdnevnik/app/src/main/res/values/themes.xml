<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VodovDnevnik" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_rsv</item>
        <item name="colorPrimaryVariant">@color/green_rsv_light </item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_rsv</item>
        <item name="colorSecondaryVariant">@color/dark_theme_second</item>
        <item name="colorOnSecondary">@color/dark_theme_back</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="heading" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/green_rsv</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="nastavitve_labels" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="paddingStart">10dp</item>
    </style>
</resources>