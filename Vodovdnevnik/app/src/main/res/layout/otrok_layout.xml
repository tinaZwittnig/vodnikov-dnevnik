<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="24dp">
    <TextView
        android:id="@+id/prisoten_otork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/prisotnen"
        android:textStyle="bold"
        android:textColor="@color/green_rsv"
        android:textSize="16sp"
        android:paddingBottom="5dp"/>
    <ListView
        android:id="@+id/prisotnost_otork"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/prisoten_otork"
        app:layout_constraintStart_toStartOf="@id/prisoten_otork"
        style="@style/nastavitve_labels"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/osvojene_otork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/prisotnost_otork"
        app:layout_constraintTop_toBottomOf="@id/prisotnost_otork"
        android:text="@string/osvojene"
        android:textStyle="bold"
        android:textColor="@color/green_rsv"
        android:textSize="16sp"
        android:paddingBottom="5dp"/>
    <ListView
        android:id="@+id/vescina_otork"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/osvojene_otork"
        app:layout_constraintStart_toStartOf="@id/osvojene_otork"
        style="@style/nastavitve_labels"
        android:padding="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>